<% provide(:title,"Request Queue")%>
<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table style="width: 100%">
  <thead>
    <tr>
      <th>CLID</th>
      <th>Gender</th>
      <th>Current Building</th>
      <th>Current Room</th>
      <th>Requested Building</th>
      <th>Requested Room</th>
      <th colspan="20"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.clid %></td>
        <td><%= request.gender %></td>
        <td></td>
        <td></td>
        <td><%= request.building %></td>
        <td><%= request.room %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>

